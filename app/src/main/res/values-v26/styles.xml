<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Theme">
    <item name="android:statusBarColor">
      @color/toolbar
    </item>
  </style>
  <style name="Default.CardView.Style" parent="Base.CardView">
    <item name="cardElevation">15dp</item>
    <item name="cardCornerRadius">7dp</item>
    <item name="android:layout_marginVertical">5dp</item>
    <item name="android:layout_marginHorizontal">5dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="cardBackgroundColor">@color/white</item>

  </style>

  <style name="ChipTextView" parent="Widget.AppCompat.TextView">
    <item name="android:paddingVertical">4dp</item>
    <item name="android:paddingHorizontal">8dp</item>
    <item name="maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
  </style>
</resources>